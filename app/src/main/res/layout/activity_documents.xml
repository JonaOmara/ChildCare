<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagegal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
        <Button
            android:onClick="savei"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_btn"
            android:text="Save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="16dp"
        app:cardCornerRadius="4dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:layout_margin="5dp"
                />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baby1"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baby2"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baby3"
                    tools:ignore="VectorDrawableCompat" />
            </TableRow>






    </TableLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="16dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Documents"
                    android:layout_margin="5dp"
                    />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/doc1"
                        tools:ignore="VectorDrawableCompat" />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/doc2"
                       />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/doc2"
                        tools:ignore="VectorDrawableCompat" />
                </TableRow>

            </TableLayout>
            <Button
                android:id="@+id/doc_save"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Add"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/blue_btn"
                android:padding="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>