<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.invitech.childcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/childb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/childb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".doc_schedule"
            android:label="Doctor"
             />
        <activity android:name=".Option" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".more" />
        <activity
            android:name=".Documents"
            android:label="Photos and Documents" />
        <activity
            android:name=".Profile"
            android:label="@string/Profile" />
        <activity
            android:name=".News"
            android:label="News Feeds" />
        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>